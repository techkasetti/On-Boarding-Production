<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>User_Required_When_Type_User</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
            ISPICKVAL(Interviewer_Type__c , &quot;User&quot;),
            ISBLANK(Interviewer_User__c)
        )</errorConditionFormula>
    <errorMessage>Please select an internal User as interviewer.</errorMessage>
</ValidationRule>
