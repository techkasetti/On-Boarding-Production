<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>External_Details_Required</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
            ISPICKVAL(Interviewer_Type__c , &quot;External&quot;),
            OR(
                ISBLANK(External_Interviewer_Name__c),
                ISBLANK(External_Interviewer_Email__c)
            )
        )</errorConditionFormula>
    <errorMessage>Please enter external interviewer name and email.</errorMessage>
</ValidationRule>
